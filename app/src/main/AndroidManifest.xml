<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.aralpan.aralpanmobile">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"></activity>
        <activity android:name=".SelectGameActivity"
            android:noHistory="true"/>
        <activity android:name=".SelectDifficultyActivity"
            android:noHistory="true"/>
        <activity android:name=".ResultActivity"
            android:noHistory="true"/>
        <activity android:name=".QuizActivity"
            android:noHistory="false"/>
        <activity android:name=".QuizTFActivity"
            android:noHistory="false"/>
        <activity android:name=".GuessActivity"
            android:noHistory="false"/>
        <activity android:name=".FindActivity"
            android:noHistory="false"/>
        <activity android:name=".SettingActivity"
            android:noHistory="true"/>
        <activity android:name=".LeaderBoardActivity"
            android:noHistory="true"/>
        <activity android:name=".UserActivity"
            android:noHistory="true"/>
        <activity android:name=".InstructionActivity"
            android:noHistory="true"></activity>

    </application>

</manifest>